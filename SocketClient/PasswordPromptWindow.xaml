<Window x:Class="SocketClient.PasswordPromptWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:SocketClient"
		mc:Ignorable="d"
		Title="PasswordPrompt" Height="100" Width="300"
		WindowStartupLocation="CenterOwner">
	<StackPanel Orientation="Vertical" VerticalAlignment="Center">
		<PasswordBox x:Name="PasswordPasswordBox" Width="200" Margin="0, 0, 0, 10" PasswordChanged="PasswordPasswordBox_PasswordChanged" Password="Password1"/>
		<Button x:Name="EnterPasswordButton" Content="Ввести пароль" Width="120" Click="EnterPasswordButton_Click" Loaded="EnterPasswordButton_Loaded"/>
	</StackPanel>
</Window>
